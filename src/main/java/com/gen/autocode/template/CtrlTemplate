package ${packageName};

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;
import com.alibaba.fastjson.JSONObject;
import java.util.*;
${importList}

/**
 * ${entityName}Ctrl 控制层方法
 * @author lijun
 */
@RestController
public class ${entityName}Ctrl {

    @Autowired
    private ${inftServiceName} ${implServiceName};

   /**
   * ${entityName} 根据主键获取单个数据
   * @return
   * @throws Exception
   */
   @GetMapping(value = "/${entityObj}/{${entityId}}")
   public String get${entityName}(@PathVariable(value="${entityId}") ${entityIdType} ${entityId}) throws Exception {
      if(Objects.isNull(${entityId})){
         throw new Exception("请输入要获取的数据的ID") ;
      }

      ${entityName} ${entityObj} = ${implServiceName}.load${entityName}ByKey(${entityId});
      if(Objects.isNull(${entityObj})){
          throw new Exception("没有符合条件的记录！") ;
      }
      JSONObject resp = new JSONObject();
      resp.put("${entityObj}",new ${entityName}Resp(${entityObj}));
      return JSONObject.toJSONString(resp);
   }

  /**
   * ${entityName} 根据实体对象查询列表
   * @return
   * @throws Exception
   */
   @PostMapping(value = "/${entityObj}/list")
   public JSONObject get${entityName}List(@RequestBody JSONObject reqEntity) throws Exception {
       ${entityName} ${entityObj} = JSONObject.parseObject(reqEntity.toJSONString(), ${entityName}.class);
       List<${entityName}> ${entityObj}List = ${implServiceName}.get${entityName}List(${entityObj});
       JSONObject resp = new JSONObject();
       resp.put("list",${entityObj}List);
       return resp;
   }

  /**
   * ${entityName} 新增或者修改记录，根据主键判断，主键为空则新增，否则修改。
   * @return
   * @throws Exception
   */
   @PostMapping(value = "/${entityObj}")
   public JSONObject save${entityName}(@RequestBody JSONObject reqEntity) throws  Exception{
       ${entityName} ${entityObj} = JSONObject.parseObject(reqEntity.toJSONString(), ${entityName}.class);
       ${implServiceName}.save${entityName}(${entityObj});
       JSONObject resp = new JSONObject();
       resp.put("status","success");
       return resp;
   }

   /**
    * ${entityName} 根据主键删除数据
    * @return
    * @throws Exception
    */
    @DeleteMapping(value = "/${entityObj}/{${entityId}}")
    public JSONObject delete${entityName}(@PathVariable(value="${entityId}") ${entityIdType} ${entityId}) throws  Exception{
        if(Objects.isNull(${entityId})){
           throw new Exception("入参请求异常") ;
        }

        ${implServiceName}.delete${entityName}ByKey(${entityId});
        JSONObject resp = new JSONObject();
        resp.put("status","success");
        return resp;
    }


}
