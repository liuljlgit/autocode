package ${packageName};

import java.util.*;
${importList}

/**
 * 缓存接口类 I${entityName}Redis
 * @author lijun
 */
public interface I${entityName}Redis {

    /**
     * 得到id
     */
    Long get${entityName}Id();

    /**
     * 初始化id
     */
    void initMax${entityName}Id();

    /**
     * 得到redis的key值
     */
    String get${entityName}Key(final ${entityIdType} ${entityId});

    /**
     * 把值存储到redis中
     * 1.Key-Value对象
     * 2.把key存储到一个set中,方便删除操作
     */
    String set${entityName}2Redis(${entityName} ${entityObj}, long expire);

    /**
     * 从缓存中得到值
     */
    ${entityName} get${entityName}ByKey(final ${entityIdType} ${entityId});

    /**
     * 设置分页数量到缓存中
     * @return
     */
    String set${entityName}Count2Redis(${entityName} ${entityObj}, Long count, long expire);

   /**
     * 获取分页数量
     * @return
     */
    Long get${entityName}CountFromRedis(${entityName} ${entityObj});

    /**
     * 存储分页列表到缓存中
     */
    String set${entityName}List2Redis(${entityName} ${entityObj}, ArrayList<${entityName}> ${entityObj}List, long expire);

    /**
     * 从缓存中得到分页列表
     */
    List<${entityName}> get${entityName}ListFromRedis(${entityName} ${entityObj});

    /**
     * 删除所有redis中的值
     */
    void clearAll${entityName}();
}
